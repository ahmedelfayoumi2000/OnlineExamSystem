@* @page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6 col-lg-4">
        <div class="card animate__animated animate__fadeInDown">
            <div class="card-body p-4">
                <h2 class="text-center mb-4">Create an Account</h2>
                <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="Input.UserName" class="form-label"></label>
                        <input asp-for="Input.UserName" class="form-control animate__animated animate__fadeIn" placeholder="Enter your username" />
                        <span asp-validation-for="Input.UserName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.Email" class="form-label"></label>
                        <input asp-for="Input.Email" class="form-control animate__animated animate__fadeIn" placeholder="Enter your email" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.Password" class="form-label"></label>
                        <input asp-for="Input.Password" class="form-control animate__animated animate__fadeIn" placeholder="Enter your password" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                        <input asp-for="Input.ConfirmPassword" class="form-control animate__animated animate__fadeIn" placeholder="Confirm your password" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary animate__animated animate__pulse">Register</button>
                    </div>
                </form>

                <div class="text-center mt-3">
                    <p>Already have an account? <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Login here</a></p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            $("input").each(function (index) {
                $(this).addClass("animate__animated animate__fadeIn");
                $(this).css("animation-delay", (index * 0.2) + "s");
            });
            $("button").hover(
                function () {
                    $(this).removeClass("animate__pulse").addClass("animate__tada");
                },
                function () {
                    $(this).removeClass("animate__tada").addClass("animate__pulse");
                }
            );
        });
    </script>
} *@