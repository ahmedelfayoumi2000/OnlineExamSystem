@model IEnumerable<OnlineExamSystem.BLL.Dtos.ExamDto>

<h2>Available Exams</h2>

@if (User.Identity.IsAuthenticated)
{
    <p>Welcome, @User.Identity.Name!</p>
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Duration (min)</th>
                <th>Passing Score (%)</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var exam in Model)
            {
                <tr>
                    <td>@exam.Title</td>
                    <td>@exam.Description</td>
                    <td>@exam.Duration</td>
                    <td>@exam.PassingScore</td>
                    <td>
                        <a asp-controller="Exams" asp-action="TakeExam" asp-route-id="@exam.Id" class="btn btn-primary">Take Exam</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Please <a asp-area="Identity" asp-page="/Account/Login">log in</a> to view and take exams.</p>
}