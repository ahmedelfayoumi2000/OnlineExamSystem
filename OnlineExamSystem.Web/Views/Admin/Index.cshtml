@model IEnumerable<OnlineExamSystem.Common.Models.Exam>
@{
    ViewData["Title"] = "Admin Dashboard";
}

<h1>Admin Dashboard - Exams</h1>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<p>
    <a asp-action="CreateExam" class="btn btn-primary">Create New Exam</a>
    <a asp-action="CreateUser" class="btn btn-secondary">Add New User</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Created At</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="3" class="text-center">No exams available.</td>
            </tr>
        }
        else
        {
            @foreach (var exam in Model)
            {
                <tr>
                    <td>@exam.Title</td>
                    <td>@exam.CreatedAt.ToString("d MMM yyyy")</td>
                    <td>
                        <a asp-action="Questions" asp-route-examId="@exam.Id" class="btn btn-info btn-sm">Questions</a>
                        <a asp-action="EditExam" asp-route-id="@exam.Id" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="DeleteExam" asp-route-id="@exam.Id" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this exam?')">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>