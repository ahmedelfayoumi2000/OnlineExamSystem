@model IEnumerable<OnlineExamSystem.Common.Models.Question>
@{
    ViewData["Title"] = "Questions";
    int examId = ViewBag.ExamId;
    string examTitle = ViewBag.ExamTitle;
}

<h1>Questions for @examTitle</h1>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<p>
    <a asp-action="CreateQuestion" asp-route-examId="@examId" class="btn btn-primary">Add New Question</a>
    <a asp-action="Index" class="btn btn-secondary">Back to Exams</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Correct Option</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="3" class="text-center">No questions available for this exam.</td>
            </tr>
        }
        else
        {
            @foreach (var question in Model)
            {
                <tr>
                    <td>@question.Title</td>
                    <td>Option @question.CorrectOption</td>
                    <td>
                        <a asp-action="EditQuestion" asp-route-id="@question.Id" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="DeleteQuestion" asp-route-id="@question.Id" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this question?')">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>