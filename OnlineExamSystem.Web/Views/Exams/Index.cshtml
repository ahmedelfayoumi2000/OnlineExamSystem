@model IEnumerable<OnlineExamSystem.BLL.Dtos.ExamDto>

<h2>Exams</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Exam</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Duration (min)</th>
            <th>Passing Score (%)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var exam in Model)
        {
            <tr>
                <td>@exam.Title</td>
                <td>@exam.Description</td>
                <td>@exam.PassingScore</td>
                <td>
                    <a asp-action="Details" asp-route-id="@exam.Id" class="btn btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@exam.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@exam.Id" class="btn btn-danger">Delete</a>
                    <a asp-controller="Questions" asp-action="Index" asp-route-examId="@exam.Id" class="btn btn-secondary">Manage Questions</a>
                </td>
            </tr>
        }
    </tbody>
</table>